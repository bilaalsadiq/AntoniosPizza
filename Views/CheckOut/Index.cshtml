                    @Html.EditorFor(Model => Model.Town, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(Model => Model.City, htmlAttributes: new { @class = "control-label col-lg-2" })

@model AntoniosPizza.Models.Order

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    @if(Session["cart"] != null)
    {
        <h2>Checkout</h2>
        <hr />

    <div class="form-horizontal">
